{
  "name": "nb-scaling-tracker",
  "version": "1.0.0",
  "description": "Web application to track Newsbreak ad campaigns and send scaling notifications to Google Sheets",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm install && npm run build",
    "start": "node server/index.js",
    "postinstall": "cd client && npm install"
  },
  "keywords": ["newsbreak", "campaigns", "tracking", "notifications"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "googleapis": "^126.0.1",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}

